{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./javascript",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "pretty": true,
    "strict": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
